<%= form_for(portfolio) do |form| %>
  <% if @portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@portfolio.errors.count, "error") %> prohibited this @portfolio from being saved:</h2>
      <ul>
        <% @portfolio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">

  <div class="col-md-6">
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: 'form-control' %>
  </div>
</div>


<div class="col-md-6">
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 15 %>
  </div>
</div>
</div>

  <div class="col-md-12">
    <h2>Technologies used:</h2>
  <div>
    <%= form.fields_for :technologies do |technology| %>
    <div class="form">
    <%= technology.label :name %>
    <%= technology.text_field :name, class: 'form-control' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :thumb_image %>
    <%= form.text_field :thumb_image %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save portfolio', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
