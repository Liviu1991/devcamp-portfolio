<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio.thumb_image, 'main') %>
    </div>
    <div class="col-md-5">
      <h2><%= @portfolio.title %></h2>
      <hr>
      <em><%= @portfolio.subtitle %></em>
      <p><%= @portfolio.body %></p>
      <hr>
      <%= link_to "Edit", edit_portfolio_path(@portfolio) if logged_in?(:site_admin) %>
      <h3>Technologies Used</h3>
      <% @portfolio.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
