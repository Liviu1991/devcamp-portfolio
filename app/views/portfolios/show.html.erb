<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio.main_image, 'main') %>
    </div>
    <div class="col-md-5">
      <h2><%= @portfolio.title %></h2>
      <hr>
      <em><%= @portfolio.subtitle %></em>
      <p><%= @portfolio.body %></p>
      <hr>
      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit item", edit_portfolio_path(@portfolio), class: 'btn btn-warning' %>
        </div>
      <% end %>
      <h3>Technologies Used</h3>
        <% @portfolio.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
