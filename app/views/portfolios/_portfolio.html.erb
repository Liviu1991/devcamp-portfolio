<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio.id %>">
    <%= image_tag portfolio_img(portfolio.thumb_image, 'thumb') %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio.title, portfolio_show_path(portfolio) %></span>
        <p><%= portfolio.subtitle %></p>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'Edit', edit_portfolio_path(portfolio),
          class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
